{
  "name": "service-user",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "scripts": {
    "build": "rimraf dist && cross-env NODE_ENV=production tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "cross-env NODE_ENV=development nodemon",
    "debug": "cross-env NODE_ENV=development nodemon --config nodemon-debug.json",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "cross-env NODE_ENV=development jest",
    "test:cov": "cross-env NODE_ENV=development jest --coverage"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.1.2",
    "@nestjs/common": "^6.2.4",
    "@nestjs/core": "^6.2.4",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-fastify": "^6.2.4",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/terminus": "^6.2.0-rc.0",
    "@nestjs/typeorm": "^6.1.1",
    "@nestjsx/crud": "^3.3.0-rc.0",
    "@utils/bootstrap": "file:../../packages/@utils/bootstrap",
    "@utils/env": "file:../../packages/@utils/env",
    "@utils/event": "file:../../packages/@utils/event",
    "@utils/logger": "file:../../packages/@utils/logger",
    "@utils/typeorm": "file:../../packages/@utils/typeorm",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "cross-env": "^5.2.0",
    "ioredis": "^4.9.5",
    "kafka-node": "^4.1.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.2",
    "typeorm": "^0.2.17",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.2.4",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.4",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
