{
  "name": "worker-user",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "scripts": {
    "build": "rimraf dist && cross-env NODE_ENV=production tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "cross-env NODE_ENV=development nodemon",
    "debug": "cross-env NODE_ENV=development nodemon --config nodemon-debug.json",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "cross-env NODE_ENV=development jest",
    "test:cov": "cross-env NODE_ENV=development jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^6.2.0",
    "@nestjs/core": "^6.2.0",
    "@utils/env": "file:../../packages/@utils/env",
    "@utils/event": "file:../../packages/@utils/event",
    "@utils/logger": "file:../../packages/@utils/logger",
    "cross-env": "^5.2.0",
    "kafka-node": "^4.1.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.2.0",
    "@types/agenda": "^2.0.4",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.0",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
