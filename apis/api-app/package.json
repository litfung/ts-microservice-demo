{
  "name": "api-app",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "scripts": {
    "codegen": "node codegen.js",
    "build": "rimraf dist && cross-env NODE_ENV=production tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "cross-env NODE_ENV=development nodemon",
    "debug": "cross-env NODE_ENV=development nodemon --config nodemon-debug.json",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "cross-env NODE_ENV=development jest",
    "test:cov": "cross-env NODE_ENV=development jest --coverage"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.1.0",
    "@nestjs/common": "^6.0.5",
    "@nestjs/core": "^6.0.5",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-fastify": "^6.0.5",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/terminus": "^6.1.0",
    "@utils/bootstrap": "file:../../packages/@utils/bootstrap",
    "@utils/env": "file:../../packages/@utils/env",
    "@utils/logger": "file:../../packages/@utils/logger",
    "axios": "^0.18.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cross-env": "^5.2.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.4.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.2.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^11.12.2",
    "@types/passport-http-bearer": "^1.0.33",
    "jest": "^24.8.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "swagger-axios-codegen": "^0.5.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.14.0",
    "typescript": "^3.4.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
